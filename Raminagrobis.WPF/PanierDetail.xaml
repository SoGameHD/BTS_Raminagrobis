<Page x:Class="Raminagrobis.WPF.PanierDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="PanierDetail" Loaded="LoadPage">

    <Grid>
        <ListView Name="lvPanierDetail">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Num_semaine" Width="160" DisplayMemberBinding="{Binding Num_semaine}" />
                    <GridViewColumn Header="Annee" Width="160" DisplayMemberBinding="{Binding Annee}" />
                    <GridViewColumn Header="Actif" Width="160" DisplayMemberBinding="{Binding Actif}" />
                    <GridViewColumn Header="ID" Width="160" DisplayMemberBinding="{Binding ID}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>